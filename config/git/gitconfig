[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[user]
    name = Jonathan Olsson
    email = jonathan@stoer.se
[core]
    editor = nvim
    excludefiles = ~/git/jool/config-files/git/gitignore
    autocrlf = input
[alias]
    st = status --short --branch
    ci = commit
    co = checkout
    br = branch
    top = shortlog -s -n
    dfmaster = diff origin/master...HEAD
    glog = log --graph --abbrev-commit --pretty=oneline
    lol = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    lola = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
    prune = fetch --prune
    stash-all = stash save --include-untracked
[merge]
    renameLimit = 10000
    conflictstyle = diff3
[push]
    default = simple
[pull]
    rebase = false
[status]
    showUntrackedFiles = all
